<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
          <variable
              name="registerViewModel"
              type="com.pdge.pramod.viewmodel.RegisterViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="CONSULTANCY"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="63dp"
            android:orientation="vertical"
            android:padding="30dp">

            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Enter FirstName "
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="@={registerViewModel.name}"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black" />

            <EditText
                android:id="@+id/editlast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Enter LastNmae"
                android:text="@={registerViewModel.lastName}"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black" />

            <EditText
                android:id="@+id/editgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Gender"
                android:text="@={registerViewModel.gender}"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black" />


            <EditText
                android:id="@+id/editemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Enter Email Address"
                android:text="@={registerViewModel.email}"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black"


                />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:hint="Enter Password"
                android:text="@={registerViewModel.password}"
                android:inputType="textPassword"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/input_Black" />

            <EditText
                android:id="@+id/editnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Mobile"
                android:text="@={registerViewModel.mobile}"
                android:inputType="number"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black" />


            <EditText
                android:id="@+id/editaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/round"
                android:drawablePadding="5dp"
                android:hint="Address"
                android:text="@={registerViewModel.address}"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/input_Black" />

            <Button
                android:id="@+id/buttonRegiter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"
                android:onClick="@{()-> registerViewModel.onClickRegister()}"
                android:text="REGISTER"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>
</layout>